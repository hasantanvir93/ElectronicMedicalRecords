@model EMR.Models.PatientModel

@{
    ViewData["Title"] = "Add Patient";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title mt-2">Add New Patient</h4>
            </header>
            <article class="card-body">
                <form asp-action="AddPatient">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hospital" class="control-label"></label>
                        <input asp-for="Hospital" class="form-control">
                        <span asp-validation-for="Hospital" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success btn-block"> ADD  </button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>


