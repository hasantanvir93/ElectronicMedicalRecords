@model IEnumerable<EMR.Models.PatientModel>

@{
    ViewData["Title"] = "ViewAll";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="card">
    <h2 class="card-header text-center bg-success text-light">Showing All Patients</h2>
    <br/>
    <div class="form-group">
            <input type="button" class="btn-group-lg btn-primary" value="Add Patient" onclick="window.location.href='@Url.Action("AddPatient", "PatientApp" )'" />
        </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hospital)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Specialty)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hospital)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Specialty)
                    </td>*@
                    
                    <td>
                        <a class="btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.PatientId">Edit</a> | 
                        <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
